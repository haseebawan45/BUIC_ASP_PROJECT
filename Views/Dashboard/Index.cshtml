@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "_DashboardLayout";
}

<div class="dashboard-header">
    <h1>Welcome to your Dashboard, @ViewBag.Username!</h1>
</div>

<div class="row">
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="dashboard-card">
            <h2>Upcoming Classes</h2>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Database Systems
                    <span class="badge bg-primary rounded-pill">10:00 AM</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Web Development
                    <span class="badge bg-primary rounded-pill">1:30 PM</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Computer Networks
                    <span class="badge bg-primary rounded-pill">3:45 PM</span>
                </li>
            </ul>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="dashboard-card">
            <h2>Recent Assignments</h2>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Database Project
                    <span class="badge bg-danger rounded-pill">Due Tomorrow</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Web Development Lab
                    <span class="badge bg-warning rounded-pill">Due in 3 days</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Networks Quiz
                    <span class="badge bg-success rounded-pill">Completed</span>
                </li>
            </ul>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="dashboard-card">
            <h2>Attendance Summary</h2>
            <div class="progress mb-3" style="height: 25px;">
                <div class="progress-bar bg-success" role="progressbar" style="width: 85%;" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100">Database Systems - 85%</div>
            </div>
            <div class="progress mb-3" style="height: 25px;">
                <div class="progress-bar bg-warning" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">Web Development - 75%</div>
            </div>
            <div class="progress mb-3" style="height: 25px;">
                <div class="progress-bar bg-danger" role="progressbar" style="width: 65%;" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100">Computer Networks - 65%</div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="dashboard-card">
            <h2>Recent Announcements</h2>
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Mid-term Exam Schedule</h5>
                        <small>3 days ago</small>
                    </div>
                    <p class="mb-1">The mid-term exams will start from next Monday. Check the exam schedule for details.</p>
                </a>
                <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Campus Event</h5>
                        <small>1 week ago</small>
                    </div>
                    <p class="mb-1">Annual tech fest will be held on 15th November. Register now to participate.</p>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-4">
        <div class="dashboard-card">
            <h2>Quick Links</h2>
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action">Course Registration</a>
                <a href="#" class="list-group-item list-group-item-action">Library Portal</a>
                <a href="#" class="list-group-item list-group-item-action">Academic Calendar</a>
                <a href="#" class="list-group-item list-group-item-action">Student Handbook</a>
                <a href="#" class="list-group-item list-group-item-action">Fee Payment</a>
            </div>
        </div>
    </div>
</div> 